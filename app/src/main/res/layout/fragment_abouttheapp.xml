<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developer"
        android:gravity="center_horizontal"
        android:textSize="22sp"
        android:textStyle="bold"
        />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AbouttheappFragment"
    android:layout_margin="15dp"
    >

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/devheading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Akshat Doomra"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/devheading2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/devheading1"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:text="Bits Pilani, Hyderabad Campus"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/devimage1"
            app:layout_constraintTop_toBottomOf="@id/devheading2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/gmail"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/devimage2"
            app:layout_constraintTop_toBottomOf="@id/devheading2"
            app:layout_constraintLeft_toRightOf="@id/devimage1"
            android:layout_marginLeft="20dp"
            android:src="@drawable/linkd"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/devimage3"
            app:layout_constraintTop_toBottomOf="@id/devheading2"
            app:layout_constraintLeft_toRightOf="@id/devimage2"
            android:layout_marginLeft="20dp"
            android:src="@drawable/insta"
            android:layout_marginTop="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>