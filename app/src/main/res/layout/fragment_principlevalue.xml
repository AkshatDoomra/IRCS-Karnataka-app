<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrinciplevalueFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/humanity"
            android:src="@drawable/ic_baseline_escalator_warning_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humanityheading"
        android:text="HUMANITY"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/humanity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textIsSelectable="true"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humanityheadingcontent"
            android:padding="10dp"
            android:text="The International Red Cross and Red Crescent Movement, born of a desire to bring assistance without discrimination to the wounded on the battlefield, endeavors, in its international and national capacity, to prevent and alleviate human suffering wherever it may be found. Its purpose is to protect life and health and to ensure respect for the human being. It promotes mutual understanding, friendship, cooperation and lasting peace amongst all peoples."
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humanityheading"
            android:textIsSelectable="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/impartiality"
            android:src="@drawable/ic_baseline_handshake_24"
            app:layout_constraintTop_toBottomOf="@id/humanityheadingcontent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/impartialityheaidng"
            android:text="IMPARTIALITY"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/impartiality"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textIsSelectable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/impartialityheaidngcontent"
            app:layout_constraintTop_toBottomOf="@id/impartialityheaidng"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="It makes no discrimination as to nationality, race, religious beliefs, class or political opinions. It endeavors to relieve the suffering of individuals, being guided solely by their needs, and to give priority to the most urgent cases of distress."
            android:textIsSelectable="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/neutrality"
            android:src="@drawable/ic_baseline_people_24"
            app:layout_constraintTop_toBottomOf="@id/impartialityheaidngcontent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/neutralityheading"
            android:text="NEUTRALITY"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/neutrality"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textIsSelectable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/neutralityheadingcontent"
            app:layout_constraintTop_toBottomOf="@id/neutralityheading"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="In order to continue to enjoy the confidence of all, the Movement may not take sides in hostilities or engage at any time in controversies of a political, racial, religious or ideological nature."
            android:textIsSelectable="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/independence"
            android:src="@drawable/ic_baseline_hail_24"
            app:layout_constraintTop_toBottomOf="@id/neutralityheadingcontent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/independenceheading"
            android:text="INDEPENDENCE"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/independence"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textIsSelectable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/independenceheadingcontent"
            app:layout_constraintTop_toBottomOf="@id/independenceheading"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="The Movement is independent. The National Societies, while auxiliaries in the humanitarian services of their governments and subject to the laws of their respective countries, must always maintain their autonomy so that they may be able at all times to act in accordance with the principles of the Movement."
            android:textIsSelectable="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/voluntarysevices"
            android:src="@drawable/ic_baseline_miscellaneous_services_24"
            app:layout_constraintTop_toBottomOf="@id/independenceheadingcontent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voluntarysevicesheading"
            android:text="VOLUNTARY SERVICE"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/voluntarysevices"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textIsSelectable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voluntarysevicesheadingcontent"
            app:layout_constraintTop_toBottomOf="@id/voluntarysevicesheading"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="It is a voluntary relief movement not prompted in any manner by desire for gain."
            android:textIsSelectable="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/unity"
            android:src="@drawable/ic_baseline_groups_24"
            app:layout_constraintTop_toBottomOf="@id/voluntarysevicesheadingcontent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unityheading"
            android:text="UNITY"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/unity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textIsSelectable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unityheadingcontent"
            app:layout_constraintTop_toBottomOf="@id/unityheading"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="There can be only one Red Cross or one Red Crescent Society in any one country. It must be open to all. It must carry on its humanitarian work throughout its territory."
            android:textIsSelectable="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/universality"
            android:src="@drawable/ic_baseline_language_24"
            app:layout_constraintTop_toBottomOf="@id/unityheadingcontent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/universalityheading"
            android:text="UNIVERSALITY"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/universality"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textIsSelectable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/universalityheadingcontent"
            app:layout_constraintTop_toBottomOf="@id/universalityheading"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="The International Red Cross and Red Crescent Movement, in which all Societies have equal status and share equal responsibilities and duties in helping each other, is worldwide."
            android:textIsSelectable="true"
            />











    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>